<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">true</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBarStyle</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.ActionBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/bar_bg</item>
        <item name="titleTextStyle">@style/AppTheme.TitleTextStyle</item>
    </style>

    <style name="AppTheme.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/agsYellow</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/agsYellow</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:paddingLeft">@dimen/button_padding</item>
        <item name="android:paddingRight">@dimen/button_padding</item>
    </style>

    <style name="LargeButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/agsYellow</item>
        <item name="android:textSize">@dimen/large_button_text_size</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/large_button_bg</item>
        <item name="android:paddingLeft">@dimen/large_button_padding</item>
        <item name="android:paddingRight">@dimen/large_button_padding</item>
    </style>

    <style name="AlternateButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@color/lightShade</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="TimetableHeaderStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/agsGreen</item>
        <item name="android:layout_margin">@dimen/very_small_margin</item>
        <item name="android:padding">@dimen/small_margin</item>
    </style>

    <style name="TimetableHeaderText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/agsYellow</item>
    </style>

    <style name="TimetableStripStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/lightestShade</item>
        <item name="android:layout_margin">@dimen/very_small_margin</item>
    </style>

</resources>
