<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="12"
    android:layout_marginTop="@dimen/smallest_margin"
    android:background="@color/greenShade">

    <TextView
        android:id="@+id/block_start_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/very_small_margin"
        android:gravity="top"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/time_placeholder"/>

    <TextView
        android:id="@+id/block_label"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/sport_placeholder"/>

    <TextView
        android:id="@+id/block_end_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/very_small_margin"
        android:gravity="bottom"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/time_placeholder"/>

</LinearLayout>